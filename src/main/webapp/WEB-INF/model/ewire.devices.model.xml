<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="ewire.devices">
		<class name="Connector">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.core:String"
				/>
				<reference name="connections"
					kind="forwards"
					multiple="true"
					navigate="true"
					type="ewire.wires:Function"
				/>
				<reference name="connectorType"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="ConnectorTemplate"
				/>
			</attributes>
		</class>
		<class name="ConnectorTemplate">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					type="tl.core:String"
				/>
				<reference name="connectionType"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="ewire.functions:FunctionType"
				/>
			</attributes>
		</class>
		<interface name="Device">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.core:String"
				/>
				<reference name="connectors"
					composite="true"
					kind="forwards"
					navigate="true"
					type="Connector"
				/>
				<reference name="deviceType"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="DeviceType"
				/>
			</attributes>
		</interface>
		<class name="DeviceType">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form>
						<field
							attribute="name"
							fullQualifiedName="ewire.devices:DeviceType#name"
							type="tl.core:String"
						/>
						<field
							attribute="connectors"
							fullQualifiedName="ewire.devices:DeviceType#connectors"
							type="ewire.devices:ConnectorTemplate"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.core:String"
				/>
				<reference name="connectors"
					composite="true"
					kind="forwards"
					multiple="true"
					navigate="true"
					type="ConnectorTemplate"
				/>
			</attributes>
		</class>
	</module>
</model>